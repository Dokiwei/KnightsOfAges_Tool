<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.诸神助手" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>




    <!--小汉堡颜色为白色-->
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/toolbar_text</item>
    </style>

    <!-- ToolBar菜单样式 -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/white</item> <!--  menu中字体颜色-->
        <item name="android:textSize">18sp</item> <!--  字体大小-->
        <item name="android:textColor">@color/white</item>
        <item name="android:color">@color/white</item>
        <item name="minHeight">@dimen/toolbar_minHeight</item>
        <item name="maxButtonHeight">@dimen/toolbar_minHeight</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

</resources>